<h1>Users#edit</h1>
    <div class="body-wrap">
        <div id="st-container" class="st-container">
            <div class="st-pusher">
            <div class="st-content">
                <div class="st-content-inner">
                <section class="slice slice-lg sct-color-1">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <div class="form-user style-1 rounded has-shadow-1">
                                    <div class="form-header text-center">
                                        <h2 class="form-header-title">Editing Book</h2>
                                        <% if @myBook.errors.any? %>
                                        <div class="alert alert-warning">
                                            <ul>
                                            <% @myBook.errors.full_messages.each do |message| %>
                                                <p>errors</p>
                                                <li><%= message %></li>
                                            <% end %>
                                            </ul>
                                        </div>
                                        <% end %>
                                    </div>
                                    <div class="form-body">
                                        <%= form_for(@myBook) do |f| %>
                                            <div class="form-group has-icon">
                                                <label>Title</label>
                                                <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"タイトル"%>
                                                <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                                                <label>Opinion</label>
                                                <%= f.text_field :body, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"本文"%>
                                            </div>
                                            <%= f.submit "Update Book", class:"btn btn-primary col-xs-12" %>
                                        <% end %>
                                    </div>
                                    <%= link_to 'Show', book_path(@myBook) %>
                                    <%= link_to 'Back', books_path() %>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                </div>
            </div>
            </div>
        </div>
    </div>
