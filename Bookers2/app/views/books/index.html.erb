<div class="container">
    <div class="notice-container">
        <p class="notice"><%= flash[:notice] %>
    </div>
    <div class="row">
        <div class="col-xs-3">
            <%= render 'layouts/user_info' %>
            <%= render 'layouts/new_book' %>
        </div>
        <div class="col-xs-9">
            <h1>Books</h1>
            <% if @book.errors.any? %>
            <div id="error_explanation">
                <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
                <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
                </ul>
            </div>
            <% end %>
            <table class="table table-hover table-inverse">
                <thread>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thread>
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td>
                          <%= link_to user_path(book.user) do %>
                            <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpg', fallback: "no_image.jpg", size: '50x50' %>
                          <% end %>
                        </td>
                        <td>
                          <%= link_to book.title, book_path(book) %>
                        </td>
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
