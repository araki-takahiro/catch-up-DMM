<% if flash[:notice] %>
<P><%= flash[:notice] %></P>
<%end%>
<h1>Editing BOOK</h1>
<%= form_with(model:@book,local:true) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<div>
<%= f.submit "Update Book" %>
</div>
<%end%>
<%= link_to "show",book_path(@book) %>
<%= link_to "Back",books_path %>